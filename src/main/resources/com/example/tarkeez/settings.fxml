<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="400.0" spacing="20.0" styleClass="root-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tarkeez.SettingsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="app-title" text="âš™ Settings" />

    <VBox spacing="15.0" styleClass="card">
        <GridPane hgap="15.0" vgap="15.0">
            <Label styleClass="card-title" text="Pomodoro Time (min):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Spinner fx:id="pomodoroSpinner" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label styleClass="card-title" text="Break Time (min):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Spinner fx:id="breakSpinner" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#handleCancel" styleClass="secondary-btn" text="Cancel" />
        <Button onAction="#handleSave" styleClass="primary-btn" text="Save Changes" />
    </HBox>

</VBox>